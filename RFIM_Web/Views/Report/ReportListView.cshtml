
@{
    ViewData["Title"] = "ReportListView";
}

<div class="all-content-wrapper">
    <div class="button-adminpro-area mg-tb-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="button-ad-wrap">
                        <div class="alert-title">
                            <h1>Type of reports</h1>
                            <p>
                                Choose report that you want to generate PDF file
                            </p>
                        </div>
                        <div class="button-ap-list responsive-btn">
                            <div class="button-style-four btn-mg-b-10">
                                <button type="button" class="btn btn-custon-four btn-default dropdown-toggle1" data-toggle="dropdown">
                                    Good Receive/Issue <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu btn-dropdown-menu another-drop-pro-two dropdown-toggle1" role="menu">
                                    <li>
                                        <a asp-action="ReceivePDF" asp-controller="Report">Good Receive</a>
                                    </li>
                                    <li>
                                        <a asp-action="IssuePDF" asp-controller="Report">Good Issue</a>
                                    </li>
                                </ul>
                                <a class="btn btn-custon-four btn-default" asp-action="GeneratePDF" asp-controller="Report">Product</a>
                                <a class="btn btn-custon-four btn-default" asp-action="CategoryPDF" asp-controller="Report">Category</a>
                                <a class="btn btn-custon-four btn-default" asp-action="VendorPDF" asp-controller="Report">Vendor</a>
                                @*<a class="btn btn-custon-four btn-default" asp-action="StocktakePDF" asp-controller="Report">Stocktake</a>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>  
    </div>
</div>
