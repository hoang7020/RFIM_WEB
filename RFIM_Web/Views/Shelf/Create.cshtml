@model RFIM_Web.Models.Shelf

<form asp-action="Create" asp-controller="Shelf" method="post">
    <div class="modal-header">
        <button type="button" class="close" datadismiss="modal-user">&times;</button>
        <h4 class="modal-title">Create Shelf</h4>
    </div>
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-lg-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ShelfCode" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-9">
                        <input name="ShelfCode" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-9">
                        <input name="Description" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FloorNumber" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-9">
                        <input name="FloorNumber" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CellNumber" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-9">
                        <input name="CellNumber" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary">Confirm</button>
        <button type="button" class="btn btn-default" datadismiss="modal">Cancel</button>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>

    <script>
        $(function () {

            $("#frmCreateShelf").validate({
                rules: {
                    ShelfCode: { require: true }
                },
                messages: {
                    ShelfCode: { require: "Please input this field"}
                }
            });
        });
    </script>
}

