@model RFIM_Web.Models.User

<form method="post" asp-action="DeleteUser">
    <div class="modal-header">
        <button type="button" class="close" datadismiss="modal-user">&times;</button>
        <h4 class="modal-title">Deactive user @Model.Username</h4>
    </div>
    <div class="modal-body form-horizontal">
        Deactivated user cannot log in to system. Are you sure to deactive <b>@Model.Username</b>?
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary">Confirm</button>
        <button asp-action="BackToUserList" asp-controller="Admin" class="btn btn-default">Cancel</button>
    </div>
</form>


