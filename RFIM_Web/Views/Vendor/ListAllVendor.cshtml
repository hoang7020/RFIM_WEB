@model IEnumerable<RFIM_Web.Models.Vendor>

@{
    ViewData["Title"] = "ListAllVendor";
}

<div class="all-content-wrapper">
    <div class="data-table-area mg-tb-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="sparkline13-list">
                        <div class="sparkline13-hd">
                            <div class="main-sparkline13-hd">
                                <h1>Vendor List</h1>
                            </div>
                        </div>

                        <div class="sparkline13-graph">
                            <div class="datatable-dashv1-list custom-datatable-overright">
                                <a asp-action="CreateVendor" asp-controller="Vendor" class="btn btn-success">Create Vendor</a>
                                <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true" data-show-pagination-switch="true"
                                       data-show-toggle="true">
                                    <thead>
                                        <tr>
                                            <th>Vendor Name</th>
                                            <th>Description</th>
                                            <th>Status</th>
                                            <th>Setting</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var vendor in Model)
                                        {
                                            <tr>
                                                <td>@vendor.VendorName</td>
                                                <td>@vendor.Description</td>
                                                <td>
                                                    @if (vendor.Status)
                                                    {
                                                        <p>Active</p>
                                                    }
                                                    else
                                                    {
                                                        <p>Deactive</p>
                                                    }
                                                </td>
                                                <td>
                                                    <a asp-action="EditVendor" asp-controller="Vendor" asp-route-id="@vendor.VendorId" class="btn btn-success"><i class="fas fa-edit" aria-hidden="true"></i></a>
                                                    @if (vendor.Status)
                                                    {
                                                        <a asp-action="DeleteVendor" asp-controller="Vendor" asp-route-id="@vendor.VendorId" class="btn btn-danger" data-toggle="modal" data-target="#modal-vendor-delete">
                                                            <i class="fas fa-ban" aria-hidden="true"></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-action="ActiveVendor" asp-controller="Vendor" asp-route-id="@vendor.VendorId" class="btn btn-success" data-toggle="modal" data-target="#modal-vendor-active">
                                                            <i class="fas fa-check" aria-hidden="true"></i>
                                                        </a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <div id="modal-vendor-delete" aria-hidden="true" class="modal fade" role="dialog">
                                    <div class="modal-dialog">
                                        <!-- Modal content-->
                                        <div class="modal-content">

                                        </div>
                                    </div>
                                </div>
                                <div id="modal-vendor-active" aria-hidden="true" class="modal fade" role="dialog">
                                    <div class="modal-dialog">
                                        <!-- Modal content-->
                                        <div class="modal-content">

                                        </div>
                                    </div>
                                </div>
                                <div id="modal-vendor-deactive" aria-hidden="true" class="modal fade" role="dialog">
                                    <div class="modal-dialog">
                                        <!-- Modal content-->
                                        <div class="modal-content">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
 $(function () {
     $("#modal-vendor-delete").on('hidden.bs.modal', function () {
       $(this).removeData('bs.modal');
     });
     $("#modal-vendor-active").on('hidden.bs.modal', function () {
         $(this).removeData('bs.modal');
     });
     $("#modal-vendor-deactive").on('hidden.bs.modal', function () {
         $(this).removeData('bs.modal');
     });
 });
    </script>
}